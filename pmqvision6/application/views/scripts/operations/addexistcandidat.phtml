					});
				}
			}).navGrid("#pager",{edit:false,add:false,del:false,search:false});

			$("a.search").live(
				"click",
				function(){
					$("#list").setGridParam(
						{
							url : baseUrl + '/ajax/getlistecandidats/?operation='+<?php echo $_GET['operation_id']; ?>+'&string='+$("input#string").val()
						}
					).trigger("reloadGrid");
				}
			);

		}
	);
</script>

